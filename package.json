{
  "name": "lova-v1",
  "version": "2.0.0",
  "description": "Minimalist wardrobe manager and AI style consultant",
  "main": "index.tsx",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/canduzcd-ops/Lova-v1.git"
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "node scripts/check-firebase-config.mjs",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "firebase:indexes": "firebase deploy --only firestore:indexes",
    "firebase:rules": "firebase deploy --only firestore:rules",
    "firebase:deploy": "firebase deploy --only firestore:rules,firestore:indexes",
    "postinstall": "patch-package && node scripts/patch-ios-purchase-fileutility.mjs",
    "cap:sync:ios": "npx cap sync ios && node scripts/patch-ios-purchase-fileutility.mjs"
  },
  "keywords": [
    "fashion",
    "ai",
    "wardrobe",
    "style",
    "gemini",
    "vite"
  ],
  "author": "canduzcd-ops",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/canduzcd-ops/Lova-v1/issues"
  },
  "homepage": "https://github.com/canduzcd-ops/Lova-v1#readme",
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/camera": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@capacitor/local-notifications": "^8.0.0",
    "@capacitor/network": "^8.0.0",
    "@capacitor/preferences": "^8.0.0",
    "@capacitor/push-notifications": "^8.0.0",
    "@google/genai": "^1.33.0",
    "@sentry/react": "^10.32.1",
    "@supabase/supabase-js": "^2.87.1",
    "capacitor-apple-login": "^0.0.7",
    "cordova-plugin-purchase": "^13.12.1",
    "firebase": "^11.10.0",
    "html-to-image": "^1.11.11",
    "i18next": "^25.7.3",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.5.1",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.19",
    "jsdom": "^24.0.0",
    "patch-package": "^8.0.1",
    "postcss": "^8.4.38",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^1.6.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
